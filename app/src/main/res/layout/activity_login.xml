<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:background="@drawable/boton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="223dp"
        android:layout_height="178dp"
        android:layout_marginTop="30dp"
        android:padding="0dp"
        android:src="@mipmap/ic_iconapp2_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="370dp"
        android:background="@drawable/boton2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Bienvenido a\n Mi APR"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boton2"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/boton2"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="30dp"

            />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/boton3"
            android:onClick="login"
            android:text="Ingresar"
            android:textColor="#fff"
            android:textSize="20dp"

            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>